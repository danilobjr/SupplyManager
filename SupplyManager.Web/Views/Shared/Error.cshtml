@model System.Web.Mvc.HandleErrorInfo

@{
    Layout = "~/Views/Shared/_LayoutErro.cshtml";
    ViewBag.Title = "Erro";
}

@section tituloPagina {
    <h5>HTTP Status 500</h5>
    <h1>Erro Interno de Servidor</h1>
}

<div class="errortitle">
    <h4 class="animate0 fadeInUp">Um erro ocorreu enquanto sua requisição era requisitada.</h4>
    <span class="animate1 bounceIn">5</span>
    <span class="animate2 bounceIn">0</span>
    <span class="animate3 bounceIn">0</span>
    <div class="errorbtns animate4 fadeInUp">
        <a onclick="history.back()" class="btn btn-primary btn-large">Ir para Página Anterior</a>
        <a href="/home/index" class="btn btn-large">Ir para Home</a>
    </div>
</div>

<span>Controller</span> @Model.ControllerName 
<br />
<span>Action</span> @Model.ActionName
<br />
<span>Exception</span> @Model.Exception
<br />
<span>InnerException</span> @Model.Exception.InnerException
<br />
<span>Message</span> @Model.Exception.Message
<br />
<span>StackTrace</span> @Model.Exception.StackTrace